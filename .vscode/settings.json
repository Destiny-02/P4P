{
  // hide temp folders
  "files.exclude": {
    "**/dist": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true
  },

  // enable syntax highlighting for our TSV-esque files which are saved with a .txt extension
  "files.associations": {
    "*.txt": "tsv"
  },

  // set up python linters
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "editor.tabSize": 4,
  "editor.indentSize": 4,
  "python.formatting.provider": "black",

  "python.analysis.typeCheckingMode": "basic",

  "python.linting.flake8Enabled": false,
  "python.linting.pylintEnabled": true
}
